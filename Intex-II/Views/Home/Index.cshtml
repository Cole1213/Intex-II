@{
    ViewData["Title"] = "Home Page";
}
<div class="hero-img">
    <div class="hero-txt poppins-regular">
        <h2 >
            Welcome to Aurora Bricks!
        </h2>
        <img src="imgs/legobrick.png" height="50px"/>
        <button>
            Shop Now >
        </button>
    </div>
    <div class="carousel" data-carousel="1" data-speed="5000">
        <span class="carousel-control-left"></span>
        <span class="carousel-control-right"></span>
        <div class="carousel-content">
            <!-- add extra last pic first and extra first pic last for hover effect to work properly  -->
            <img src="imgs/lotr.png" alt="image 5"/>
            <img src="imgs/gringotts.png" alt="image 1"/>
            <img src="imgs/castle.png" alt="image 2"/>

            <img src="imgs/sanctum.png" alt="image 3"/>

            <img src="imgs/starry.png" alt="image 4"/>

            <img src="imgs/lotr.png" alt="image 5"/>
            <img src="imgs/gringotts.png" alt="image 1"/>
        </div>
    </div>
</div>
<div class="text-center">
<div class="cards">
@foreach(var r in ViewBag.Recommendations)
{
    <div class="card">
        <img src="@r.ProductImage" height="300px"/>
        <p>@r.ProductName - @r.ProductPrice </p>
    </div>

}

<div class="wrapper">
  <div class="container">
    <div class="top"></div>
    <div class="bottom">
      <div class="left">
        <div class="details">
          <h1>Chair</h1>
          <p>£250</p>
        </div>
        <div class="buy"><i class="material-icons">add_shopping_cart</i></div>
      </div>
      <div class="right">
        <div class="done"><i class="material-icons">done</i></div>
        <div class="details">
          <h1>Chair</h1>
          <p>Added to your cart</p>
        </div>
        <div class="remove"><i class="material-icons">clear</i></div>
      </div>
    </div>
  </div>
  <div class="inside">
    <div class="icon"><i class="material-icons">info_outline</i></div>
    <div class="contents">
