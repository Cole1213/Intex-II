@model Product

<br />
<br />
<br />
<form method="post">
    <div>
        <input type="hidden" asp-for="ProductId" />
    </div>
    <div>
        <label asp-for="ProductName">Product Name:</label>
        <input type="text" asp-for="ProductName" required>
    </div>
    <div>
        <label asp-for="ProductYear">Product Year:</label>
        <input type="number" asp-for="ProductYear">
    </div>
    <div>
        <label asp-for="ProductNumParts">Number of Parts:</label>
        <input type="number" asp-for="ProductNumParts">
    </div>
    <div>
        <label asp-for="ProductPrice">Product Price:</label>
        <input type="number" asp-for="ProductPrice" required>
    </div>
    <div>
        <label asp-for="ProductImage">Product Image URL:</label>
        <input type="text" asp-for="ProductImage">
    </div>
    <div>
        <label asp-for="ProductPrimaryColor">Primary Color:</label>
        <input type="text" asp-for="ProductPrimaryColor" required>
    </div>
    <div>
        <label asp-for="ProductSecondaryColor">Secondary Color:</label>
        <input type="text" asp-for="ProductSecondaryColor">
    </div>
    <div>
        <label asp-for="ProductDescription">Product Description:</label>
        <textarea asp-for="ProductDescription"></textarea>
    </div>
    <div>
        <label asp-for="ProductCategory">Product Category:</label>
        <input type="text" asp-for="ProductCategory">
    </div>
    <div>
        <button type="submit">Add Product</button>
    </div>
</form>