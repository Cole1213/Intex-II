<div class="container-fluid py-5">
    <div class="row">
        <!-- Filter Panel on the left with light grey background -->
        <div class="col-lg-3 mb-4">
            <form asp-controller="Home" asp-action="Products" method="get">
                <div class="bg-light p-4 shadow-sm rounded">
                    <h2>Filters</h2>
                    <h3 class="h4 mb-4">Categories</h3>
                    <!-- Categories Checkbox List -->
                    @foreach (var category in ViewBag.Categories)
                    {
                        <div class="form-check mb-2">
                            <input type="checkbox" class="form-check-input" id="@category" name="categories" value="@category">
                            <label class="form-check-label" for="@category">@category</label>
                        </div>
                    }

                    <!-- Price Range Inputs -->
                    <div class="mt-4">
                        <h3 class="h4 mb-4">Price Range</h3>
                        <label for="minPrice" class="form-label">Min Price:</label>
                        <input type="number" class="form-control mb-2" id="minPrice" name="minPrice" step="0.01" placeholder="">

                        <label for="maxPrice" class="form-label">Max Price:</label>
                        <input type="number" class="form-control mb-3" id="maxPrice" name="maxPrice" step="0.01" placeholder="">
                    </div>



                    <!-- Color Options PLACEHOLDER -->
                    <div class="mb-4">
                        <h3 class="h4 mb-4">Colors</h3>
                        <div class="color-options">
                            <button class="color-option" style="background-color: #000000;"></button>
                            <button class="color-option" style="background-color: #B2B2B2;"></button>
                            <button class="color-option" style="background-color: #784212;"></button>
                            <button class="color-option" style="background-color: #0000FF;"></button>
                        </div>
                    </div>

                    <!-- Apply Filters Button -->
                    <button type="submit" class="btn btn-primary btn-block">See Results</button>
@*                     <!-- Remove Filters Button -->
                    <button type="submit" class="btn btn-secondary btn-block">Clear Filters</button> *@
                </div>
            </form>
        </div>

        <!-- Display filtered products on the right -->
        <div class="col-lg-9">
            @if (Model is null)
            {
                <h3>Filtered Products</h3>
                <div class="row">
                    @foreach (var product in ViewBag.Products)
                    {
                        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                            <div class="card h-100">
                                <!-- Product Image -->
                                <img src="@product.ProductImage" class="card-img-top" alt="@product.ProductName">

                                <!-- Card Body -->
                                <div class="card-body">
                                    <h5 class="card-title">@product.ProductName</h5>
                                    <p class="card-text">$@product.ProductPrice</p>
                                </div>

                                <!-- Card Actions -->
                                <div class="card-footer">
                                    <a asp-controller="Home" asp-action="SingleProduct" asp-route-productId="@product.ProductId" class="btn btn-primary">View Product</a>
                                    <form method="post" class="d-inline">
                                        <input type="hidden" asp-for="CustomerId" value="@ViewBag.CustomerId" />
                                        <input type="hidden" asp-for="ProductId" value="@product.ProductId" />
                                        <input type="hidden" asp-for="ItemQuantity" value="1" />
                                        <input type="hidden" asp-for="TotalPrice" value="@product.ProductPrice" />
                                        <button type="submit" class="btn btn-success">Add to Cart</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p>No products match the selected criteria.</p>
            }
        </div>

    </div>
</div>

