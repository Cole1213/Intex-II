@model Microsoft.AspNetCore.Identity.IdentityUser
@section PageSpecificStyles {
    <link rel="stylesheet" href="~/css/admin.css">
}
<div class="full-page">
    <div class="row">
        <h1 style="text-align: center">Are you sure you want to delete <span style="font-weight: bold">@Model.UserName</span> ?</h1>
        <form method="post" style="display: flex;
                                       flex-direction: column;
                                       justify-content: center;
                                       align-items: center;
                                       margin-top: 10px;">
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <button type="submit" class="delete-btn">Delete</button>
            <a asp-controller="UserAdmin" asp-action="UserAdmin" class="cancel-btn">Cancel</a>
        </form>
    </div>
    </div>