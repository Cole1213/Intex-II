<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Intex_II</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
    <link rel="shortcut icon" href="~/imgs/favicon.png" type="image/x-icon" />
    <link rel="icon" href="~/imgs/favicon.png" type="image/x-icon" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/74c768f0cc.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Intex_II.styles.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
     
</head>
<body>
    <header>
        <nav>
            <div class="left-nav-elements">
                <a asp-controller="Home" asp-action="Index"><img src="@((ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "Home") ? "/imgs/whitelogo.png" : "/imgs/logo.png")" height="50px" alt="Lego Brick Logo"></a>
                <a asp-controller="Home" asp-action="Products" style="@((ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "Home") ? "color:white;" : "color:black;")">Shop</a>
                <a href="#" style="@((ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "Home") ? "color:white;" : "color:black;")">Discover</a>
                <a asp-controller="Home" asp-action="About" style="@((ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "Home") ? "color:white;" : "color:black;")">About</a>
            </div>
            <div class="right-nav-elements">
              <a asp-controller="Home" asp-action="Dashboard"><img src="/imgs/lego.png" height="30px"></a>
              <a ><img src="@((ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "Home") ? "/imgs/whitesearch.png" : "/imgs/search.png")" height="30px"></a>
              <a asp-action="Cart" asp-controller="Home"><img src="@((ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "Home") ? "/imgs/whitecart.png" : "/imgs/cart.png")" height="27px"></a>
            </div>
        </nav>
    </header>
    <div class="container">
    
            @RenderBody()

    </div>

<footer>
    <div class="flex-grid">
        <div class="col">
            <div class="subscription-form">
                <p>Subscribe for all things Aurora Lego</p>
                <form action="your-server-side-handler">
                    <input type="email" id="email" name="email" placeholder="Email Address" required>
                    <button type="submit">&#10140;</button> <!-- Unicode arrow symbol -->
                </form>
            </div>
            <div class="socials">
                <ul class="socialList">
                    <li><a href=""><i class="fa-brands fa-facebook-f"></i></a></li>
                    <li><a href=""> <i class="fa-brands fa-tiktok"></i></a></li>
                    <li><a href=""><i class="fa-brands fa-x-twitter"></i></a></li>
                    <li><a href=""><i class="fa-brands fa-instagram"></i></a></li>
                    
                </ul>
            </div>
          
        </div>
        <div class="col">
            <ul class="aboutList">
                <h4>About Us</h4>
                <li><a href="">Test</a></li>
                <li><a href="">Test</a></li>
                <li><a href="">Test</a></li>
                <li><a href="">Test</a></li>
                <li><a href="">Test</a></li>
            </ul>
        </div>
        <div class="col">
            <ul class="helpList">
                <h4>Get Help</h4>
                <li><a href="">Test</a></li>
                <li><a href="">Test</a></li>
                <li><a href="">Test</a></li>
                <li><a href="">Test</a></li>
                <li><a href="">Test</a></li>
            </ul>
        </div>
    </div>
    <div class="privacy-info">
        <p>Here is some privacy info</p>
    </div>
</footer>

<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
